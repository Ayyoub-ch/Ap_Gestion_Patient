{% extends 'base.html.twig' %}

{% block title %}Mon Profil{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h2 class="mb-0">
                        <i class="fas fa-user-circle me-2"></i>Mon Profil
                    </h2>
                </div>
                <div class="card-body p-4">
                    <div class="row mb-4">
                        <div class="col-md-12 text-center mb-4">
                            <div class="profile-avatar">
                                <div class="avatar-circle">
                                    <i class="fas fa-user"></i>
                                </div>
                                <h3 class="mt-3">{{ app.user.prenom }} {{ app.user.nom }}</h3>
                                <p class="text-muted">
                                    {% for role in app.user.roles %}
                                        {% if role == 'ROLE_ADMIN' %}
                                            <span class="badge bg-danger">Administrateur</span>
                                        {% elseif role == 'ROLE_ADMINISTRATIF' %}
                                            <span class="badge bg-warning">Administratif</span>
                                        {% elseif role == 'ROLE_INFIRMIER' %}
                                            <span class="badge bg-info">Infirmier</span>
                                        {% elseif role == 'ROLE_USER' %}
                                            <span class="badge bg-secondary">Utilisateur</span>
                                        {% endif %}
                                    {% endfor %}
                                </p>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <div class="info-box">
                                <label class="info-label">
                                    <i class="fas fa-user me-2"></i>Prénom
                                </label>
                                <p class="info-value">{{ app.user.prenom }}</p>
                            </div>
                        </div>

                        <div class="col-md-6 mb-3">
                            <div class="info-box">
                                <label class="info-label">
                                    <i class="fas fa-user me-2"></i>Nom
                                </label>
                                <p class="info-value">{{ app.user.nom }}</p>
                            </div>
                        </div>

                        <div class="col-md-12 mb-3">
                            <div class="info-box">
                                <label class="info-label">
                                    <i class="fas fa-envelope me-2"></i>Email
                                </label>
                                <p class="info-value">{{ app.user.email }}</p>
                            </div>
                        </div>

                        {% if app.user.service %}
                        <div class="col-md-6 mb-3">
                            <div class="info-box">
                                <label class="info-label">
                                    <i class="fas fa-building me-2"></i>Service
                                </label>
                                <p class="info-value">{{ app.user.service.libelle }}</p>
                            </div>
                        </div>
                        {% endif %}

                        {% if app.user.localite %}
                        <div class="col-md-6 mb-3">
                            <div class="info-box">
                                <label class="info-label">
                                    <i class="fas fa-map-marker-alt me-2"></i>Localité
                                </label>
                                <p class="info-value">{{ app.user.localite.codePostal }} - {{ app.user.localite.ville }}</p>
                            </div>
                        </div>
                        {% endif %}
                    </div>

                    <hr class="my-4">

                    {% for message in app.flashes('success') %}
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            {{ message }}
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    {% endfor %}

                    <div class="d-flex justify-content-between">
                        <a href="{{ path('app_main') }}" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-2"></i>Retour
                        </a>
                        <a href="{{ path('app_profile_edit') }}" class="btn btn-primary">
                            <i class="fas fa-edit me-2"></i>Modifier mon profil
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.profile-avatar {
    margin: 20px 0;
}

.avatar-circle {
    width: 120px;
    height: 120px;
    border-radius: 50%;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto;
    box-shadow: 0 8px 24px rgba(102, 126, 234, 0.4);
}

.avatar-circle i {
    font-size: 60px;
    color: white;
}

.info-box {
    background-color: #f8f9fa;
    padding: 15px;
    border-radius: 8px;
    border-left: 4px solid #007bff;
    transition: transform 0.2s ease;
}

.info-box:hover {
    transform: translateX(5px);
}

.info-label {
    font-weight: 600;
    color: #495057;
    font-size: 14px;
    margin-bottom: 5px;
    display: block;
}

.info-value {
    font-size: 16px;
    color: #212529;
    margin: 0;
}

.card {
    border: none;
    border-radius: 15px;
}

.card-header {
    border-radius: 15px 15px 0 0 !important;
    padding: 20px;
}

.badge {
    padding: 8px 16px;
    font-size: 14px;
    font-weight: 500;
}
</style>
{% endblock %}
