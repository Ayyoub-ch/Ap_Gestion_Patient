{% extends 'base.html.twig' %}
{% block title %}Séjours débutant aujourd'hui{% endblock %}

{% block body %}
    <h1>Liste des séjours à la date du {{ "now"|date("d/m/Y") }} </h1>

    {% if sejours is empty %}
        <div class="alert alert-info">
            Aucun séjour ne débute aujourd'hui pour votre service.
        </div>
    {% else %}
    <div class="">

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Nom du patient</th>
                    <th>Identifiant patient</th>
                    <th>Numéro de sejour </th>
                    <th>Heure prévue arrivée </th>
                    <th>Service</th>
                    <th>Statut du jour</th>

                </tr>
            </thead>
            <tbody>
            {% for sejour in sejours %}
                <tr>
                    <td>
                       <a href="{{ path('infos_patient', {'id': patient.id}) }}">
                       {{ sejour.patient.nom }} {{ sejour.patient.prenom}} </a>
                    </td>
                    <td>{{ sejour.date_entree|date('d/m/Y') }}</td>
                    <td>{{ sejour.chambre.id }}</td>
                    <td>{{ sejour.chambre.etage }}</td>
                    <td>
                        <a href="{{ path('app_infirmier_sejour', {id: sejour.id}) }}"
                           class="btn btn-sm btn-primary">
                            Détails / Arrivée
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% endif %}
{% endblock %}    
