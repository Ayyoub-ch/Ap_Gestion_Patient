{% extends 'base.html.twig' %}

{% block title %}Gestion des lits{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Gestion des lits</h1>
        <div>
            <a href="{{ path('app_admin_lits_new') }}" class="btn btn-success me-2">
                <i class="fas fa-plus"></i> Nouveau lit
            </a>
            <a href="{{ path('app_admin_dashboard') }}" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Retour au dashboard
            </a>
        </div>
    </div>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    {% endfor %}

    {% for message in app.flashes('error') %}
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    {% endfor %}

    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <h5 class="card-title">Total des lits</h5>
                    <h2>{{ lits|length }}</h2>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <h5 class="card-title">Lits disponibles</h5>
                    <h2>{{ lits|filter(lit => lit.disponibilite == true)|length }}</h2>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-danger text-white">
                <div class="card-body">
                    <h5 class="card-title">Lits occupés</h5>
                    <h2>{{ lits|filter(lit => lit.disponibilite == false)|length }}</h2>
                </div>
            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">Liste des lits</h5>
        </div>
        <div class="card-body">
            {% if lits|length > 0 %}
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Chambre</th>
                                <th>Service</th>
                                <th>Disponibilité</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for lit in lits %}
                                <tr>
                                    <td>{{ lit.id }}</td>
                                    <td>
                                        {% if lit.chambre %}
                                            Chambre #{{ lit.chambre.id }} (Étage {{ lit.chambre.etage }})
                                        {% else %}
                                            <span class="text-muted">Non assigné</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if lit.chambre and lit.chambre.chambre %}
                                            {{ lit.chambre.chambre.libelle }}
                                        {% else %}
                                            <span class="text-muted">-</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if lit.disponibilite %}
                                            <span class="badge bg-success">Disponible</span>
                                        {% else %}
                                            <span class="badge bg-danger">Occupé</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a href="{{ path('app_admin_lits_edit', {'id': lit.id}) }}" 
                                               class="btn btn-sm btn-primary" 
                                               title="Modifier">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <button type="button" class="btn btn-sm btn-danger" 
                                                    onclick="if(confirm('Êtes-vous sûr de vouloir supprimer ce lit ?')) document.getElementById('delete-form-{{ lit.id }}').submit();"
                                                    title="Supprimer">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </div>
                                        <form id="delete-form-{{ lit.id }}" 
                                              action="{{ path('app_admin_lits_delete', {'id': lit.id}) }}" 
                                              method="post" 
                                              style="display: none;">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ lit.id) }}">
                                        </form>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            {% else %}
                <div class="alert alert-info mb-0">
                    <i class="fas fa-info-circle"></i> Aucun lit enregistré pour le moment.
                    <a href="{{ path('app_admin_lits_new') }}" class="alert-link">Créer un nouveau lit</a>
                </div>
            {% endif %}
        </div>
    </div>
</div>

<style>
.btn-group .btn {
    margin: 0 2px;
}

.table td {
    vertical-align: middle;
}

.card.bg-primary, .card.bg-success, .card.bg-danger {
    border: none;
}
</style>
{% endblock %}
