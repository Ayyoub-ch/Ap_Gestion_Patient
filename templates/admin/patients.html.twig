{% extends 'base.html.twig' %}

{% block title %}Gestion des patients{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Gestion des patients</h1>
        <a href="{{ path('app_admin_dashboard') }}" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Retour au dashboard
        </a>
    </div>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    {% endfor %}

    {% for message in app.flashes('error') %}
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    {% endfor %}

    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">Liste des patients ({{ patients|length }})</h5>
        </div>
        <div class="card-body">
            {% if patients|length > 0 %}
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Nom</th>
                                <th>Prénom</th>
                                <th>Téléphone</th>
                                <th>Sexe</th>
                                <th>Localité</th>
                                <th>Séjours</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for patient in patients %}
                                <tr>
                                    <td>{{ patient.id }}</td>
                                    <td>{{ patient.nom }}</td>
                                    <td>{{ patient.prenom }}</td>
                                    <td>{{ patient.telephone }}</td>
                                    <td>{{ patient.sexe }}</td>
                                    <td>
                                        {% if patient.localite %}
                                            {{ patient.localite.nom }}
                                        {% else %}
                                            <span class="text-muted">-</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        <span class="badge bg-info">{{ patient.sejours|length }}</span>
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a href="{{ path('app_admin_patients_show', {'id': patient.id}) }}" class="btn btn-sm btn-info" title="Voir détails">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <button type="button" class="btn btn-sm btn-danger" 
                                                    onclick="if(confirm('Êtes-vous sûr de vouloir supprimer ce patient ?')) document.getElementById('delete-form-{{ patient.id }}').submit();"
                                                    title="Supprimer">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </div>
                                        <form id="delete-form-{{ patient.id }}" 
                                              action="{{ path('app_admin_patients_delete', {'id': patient.id}) }}" 
                                              method="post" 
                                              style="display: none;">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ patient.id) }}">
                                        </form>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            {% else %}
                <div class="alert alert-info mb-0">
                    <i class="fas fa-info-circle"></i> Aucun patient enregistré pour le moment.
                </div>
            {% endif %}
        </div>
    </div>

    <div class="mt-3">
        <small class="text-muted">
            <i class="fas fa-info-circle"></i> 
            Les patients sont gérés par le service administratif.
        </small>
    </div>
</div>

<style>
.btn-group .btn {
    margin: 0 2px;
}

.table td {
    vertical-align: middle;
}
</style>
{% endblock %}
